<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/criar_simulado.css">

    <title>Criar Simulado</title>
</head>

<body>

    <%- include('../partials/sidebar') %>
        <main>
            <% if (typeof errorMessage !== 'undefined' && errorMessage.trim()) { %>
                <script>
                    window.onload = function() {
                        alert("<%= errorMessage %>");
                    };
                </script>
            <% } %>
            <h1>Criar Simulados</h1>

            <form action="/simulados/criar-simulado" method="POST">
                <label for="titulo">TÃ­tulo do Simulados:</label>
                <input type="text" id="titulo" name="titulo" required>

                <label for="descricao">Descricao:</label>
                <textarea id="descricao" name="descricao" rows="5" cols="50" required></textarea>



                <label for="tipo">Selecione o tipo:</label>
                <select name="tipo" id="tipo" required>
                    <option value="Dissertativo">Dissertativa</option>
                    <option value="Objetivo">Objetiva</option>
                    <option value="Aleatorio">Aleatoria</option>
                </select><br>

                <label for="modo">Selecione o Modo:</label>
                <select name="modo" id="modo" required>
                    <option value="1">Normal</option>
                    <option value="2">Aleatorio</option>
                </select><br>

                <button type="submit" style="width: 80%">Criar Simulado</button>
            </form>

        </main>

        <!--========== MAIN JS ==========-->
        <script src="/js/main.js"></script>
</body>

</html>