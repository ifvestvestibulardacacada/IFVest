<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--========== BOX ICONS ==========-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!--========== CSS ==========-->
    <link rel="stylesheet" href="/css/styles.css">

    <link rel="stylesheet" href="/css/simulados.css">
    <title>Simulados</title>
</head>

<body>
    <style>

    </style>
    <%- include('../partials/sidebar') %>
        <!--========== CONTENTS ==========-->
        <main>

            <h1 class="uk-heading-divider">Selecione um simulado</h1>
            <div class="filtros">
                <form action="/usuario/simulados/visualizar?titulo=" method="GET">
                    <label for="titulo">Buscar:</label>
                    <input type="text" id="titulo" name="titulo" required>
                    <button type="submit"><i class='bx bx-search'></i> Pesquisar</button>
                </form>
               
            </div>
          
            <table class="uk-table uk-table-striped">
                <thead>
                    <tr>
                        <th>TÃ­tulo</th>
                        <th>Descricao</th>
       
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% simulados.forEach(simulado => { %>
                        <tr>
                            <td><%= simulado.titulo %></td>
                            <td><%= simulado.descricao %></td>
                     
                            <td>
                              
                                    <a href="/usuario/simulados/<%= simulado.id %>/fazer" class="simulado-icon">
                                        <i class="fas fa-play"></i> Fazer Simulado
                                    </a>
                        
                       
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            




            <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

            </div>

            
            <link rel="stylesheet" href="/css/styles.css">
        </main>

        <!--========== MAIN JS ==========-->
        <script src="/js/main.js"></script>
</body>

</html>