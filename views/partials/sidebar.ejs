                                    <a href="/professor/registrar-questao/dissertativa" class="nav__dropdown-item"><i
                                            class='bx bxs-paint'></i> Dissertativa</a>


                                    <a href="/professor/questoes" class="nav__dropdown-item"><i
                                            class='bx bxs-paint'></i>Minhas questões</a>

                                    <!-- <a href="/professor/verificar-similaridade" class="nav__dropdown-item"><i 
                                            class='bx bxs-paint' ></i>Verificação IA</a> -->

                                    <a href="/professor/manutencao" class="nav__dropdown-item"><i
                                            class='bx bxs-paint'></i>Verificação IA</a>

                                </div>
                            </div>

                        </div>
                        <div class="nav__dropdown">
                            <a href="#" class="nav__link">
                                <i class='bx bx-check-square nav__icon'></i>
                                <span class="nav__name">Topicos</span>
                                <i class='bx bx-chevron-down nav__icon nav__dropdown-icon'></i>
                            </a>


                            <div class="nav__dropdown-collapse">
                                <div class="nav__dropdown-content">


                                    <a href="/professor/topicos" class="nav__dropdown-item">Meus Topicos</a>
                                </div>
                            </div>

                        </div>
                        <% } %>
                            <div class="nav__dropdown">
                                <a href="#" class="nav__link">
                                    <i class='bx bx-book-heart nav__icon'></i>
                                    <span class="nav__name">Simulados</span>
                                    <i class='bx bx-chevron-down nav__icon nav__dropdown-icon'></i>
                                </a>


                                <div class="nav__dropdown-collapse">
                                    <div class="nav__dropdown-content">

                                        <a href="/simulados/criar-simulado" class="nav__dropdown-item">Criar Simulado</a>
