<!--========== HEADER ==========-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/styles.css">
<style>
    #perfilImage {
        cursor: pointer;
    }

    .nav__logo-img {
        width: 50px;
        height: 50px;
    }

    .nav__link.active {
        color: #12B886;
        /* Altera a cor do texto para verde */
    }
</style>
<header class="header">
    <div class="header__container">

        <a href="" class="header__logo">IFVest</a>

        <div class="header__search">
            <input type="search" placeholder="Search" class="header__input">
            <i class='bx bx-search header__icon'></i>
        </div>

        <div class="header__toggle">
            <i class='bx bx-menu' id="header-toggle"></i>
        </div>


        <div style="display: flex; align-items: center;">
            <a href="/usuario/perfil" class="header__logo-name" style="margin-right: 10px;">
                <%= nomeUsuario %>
            </a>

            <img src="<%= imagemPerfil ? imagemPerfil : '/img/profile.jpg' %>" alt="Perfil" class="header__img"
                id="perfilImage">



        </div>


    </div>
</header>

<!--========== NAV ==========-->
