    <nav class="nav__container">
        <div>
            <a href="/usuario/iniciologado" class="nav__link nav__logo">
                <img width="80" height="80" src="/img/logo/logo_IFSP.png" alt="if" />

            </a>

            <div class="nav__list">
                <div class="nav__items">
                    <h3 class="nav__subtitle">Perfil</h3>

                    <a href="/usuario/iniciologado" class="nav__link active">
                        <i class='bx bx-home nav__icon'></i>
                        <span class="nav__name">Inicio</span>
                    </a>



                    <a href="/usuario/perfil" class="nav__link">
                        <i class='bx bx-user nav__icon'></i>
                        <span class="nav__name">Perfil</span>

                    </a>

